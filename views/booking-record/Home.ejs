<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="./images/logo_white.png">
    <title>Admin</title>

    <!-- Material Icons-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,200,0,0" />


    <!-- Stylesheet -->
    <link rel="stylesheet" href="/css/home.css">
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <!-- Script -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
</head>

<body>
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="./images/logo_white.png">
                </div>
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp">close</span>
                </div>
            </div>

            <div class="sidebar">
                <a href="/home" class="active">
                    <span class="material-icons-sharp">grid_view</span>
                    <h3>Booking Records</h3>
                </a>
                <a href="/room">
                    <span class="material-icons-sharp">villa</span>
                    <h3>Rooms</h3>
                </a>
                <a href="/roomtype">
                    <span class="material-icons-sharp">library_books</span>
                    <h3>Room Types</h3>
                </a>
                <a href="/customer_record">
                    <span class="material-icons-sharp">person_outline</span>
                    <h3>Transaction Records</h3>
                </a>
                <a href="/QR">
                    <span class="material-icons-sharp">qr_code_2</span>
                    <h3>Change QR Code</h3>
                </a>
                <a href="/logout">
                    <span class="material-icons-sharp">logout</span>
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>
        <!-- End Of Aside -->
        <main>
            <h1 class="titlee">Customer Records Of The Pema By Realm</h1>
            <div class="navbar">
                <div class="wrapper">
                    <div class="search">
                        <input type="text" placeholder="Search..." id="searchbar" />
                        <span class="material-icons">search</span>
                    </div>
                    <div class="items">
                        <div class="item">
                            <FullscreenOutlinedIcon class="icon" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="insights">
                <div class="sales">

                    <div class="middle">
                        <div class="left">
                            <h3>Total Booking</h3>
                            <h1 id="output2">
                                <%=totalbookingcount%>
                            </h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <span class="material-symbols-outlined">
                                    meeting_room
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!--End Of Room Booked -->
                <div class="expenses">

                    <div class="middle">
                        <div class="left">
                            <h3>Types Of Room</h3>
                            <h1 id="output2">
                                <%=roomtype%>
                            </h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <span class="material-symbols-outlined">
                                    bed
                                </span>
                            </div>
                        </div>
                    </div>

                </div>
                <!--Types Of Room Booked -->

                <div class="income">
                    <div class="middle">
                        <div class="left">
                            <h3>Room Available</h3>
                            <h1 id="output2">
                                <%=room_number%>
                            </h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <span class="material-symbols-outlined">
                                    badge
                                </span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="service">
                    <div class="middle">
                        <div class="left">
                            <h3>Service Hours</h3>
                            <h1 id="output2">
                                24-7 Hours
                            </h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <span class="material-symbols-outlined">
                                    room_service
                                </span>
                            </div>
                        </div>
                    </div>

                </div>
                <!--End Of Income -->
            </div>
            <!-- End of Insights -->
            <div class="recent-orders">
                <h2 class="titlee">Booking Records</h2>

                <table id="mytable">
                    <thead>
                        <tr>
                            <th>Check-In</th>
                            <th>Check_Out</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>ContactNumber</th>
                            <th>SpecialRequirement</th>
                            <th>Adult</th>
                            <th>Children</th>
                            <th>Transcation ID</th>
                            <th>Total Amount</th>
                            <th>Type</th>
                            <th>Room Numbers</th>
                            <th>Verification</th>
                            <th>Booking Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% booking.reverse().forEach(data=> { %>
                            <tr>
                                <td data-label="check_in">
                                    <%= data.check_in.toDateString() %>
                                </td>
                                <td data-label="check_out">
                                    <%= data.check_out.toDateString() %>
                                </td>
                                <td data-label="name">
                                    <%= data.name %>
                                </td>
                                <td data-label="email">
                                    <%= data.email %>
                                </td>
                                <td data-label="contactNumber">
                                    <%= data.contactNumber %>
                                </td>
                                <td data-label="specialRequirement">
                                    <%= data.specialRequirement %>
                                </td>
                                <td data-label="adult">
                                    <%= data.adult %>
                                </td>
                                <td data-label="child">
                                    <%= data.child %>
                                </td>
                                <td data-label="transactionID">
                                    <%= data.transactionID %>
                                </td>
                                <td data-label="totalAmount">
                                    <% if(data.response){ %>
                                        Nu <%= data.response %>
                                            <% } else{ %>
                                                $ <%= Number(data.Dollar) %>
                                                    <% } %>
                                </td>
                                <td data-label="rooms">
                                    <%= data.category %>
                                </td>

                                <td data-label="roomNumbers">
                                    <%= data.roomNumbers %>
                                </td>

                                <td data-label="status" class="warning">
                                    <%= data.paymentStatus %>
                                </td>

                                <%if(data.isOnline){%>
                                    <td data-label="status">Online</td>

                                    <%}else{%>
                                        <td data-label="status">Admin</td>
                                        <% }%>

                                            <td data-label="action">
                                                </form>
                                                <form action="/deleterecord/<%=data.id%>" method="post">
                                                    <button class="btn3"><i class="material-icons"
                                                            style="color: #DC3545;">delete</i></button>
                                                </form>

                                                <a href="/record-edit/<%=data.id%>">
                                                    <button class="btn3">
                                                        <i class="material-icons" style="color: #1BCFB4;">edit</i>
                                                    </button></a>
                                            </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

            </div>
            <div id="pagination-container">
                <button id="prev-page" class="btn9" style="background-color: transparent"><span
                        class="material-symbols-outlined" style="font-size: 22px;">
                        chevron_left
                    </span></button>
                <span id="current-page">Page 1</span>
                <button id="next-page" class="btn9" style="background-color: transparent;"><span
                        class="material-symbols-outlined" style="font-size: 22px;">
                        chevron_right
                    </span></button>
            </div>
            <div class="btn1">
                <a href="/register">
                    <button>Add New</button>
                </a>
            </div>
        </main>

        <!------------ End Of Main ------------>

        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-icons-sharp">menu</span>
                </button>
            </div>
        </div>
    </div>

    <script src="/js/home.js"></script>
</body>

</html>