<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/addwalkin.css">
    

    <!-- Material Icons-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="icon" type="image/png" href="./images/logo_white.png">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,200,0,0" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Add New Record</title>


</head>

<body>
    <center>
        <div class="container">
            <main>
                <h1>
                    <span>R</span>ESERVATION <span>F</span>ORM </span>
                </h1>
                <form action="/saveToAdmin" method="POST" name="Form">
                    <div class="wrapper">
                        <div class="form">

                            <div class="input_field">
                                <label>
                                    <i class="fa fa-calendar"></i>&nbsp;
                                    Check_In:
                                </label>
                                <input type="text" id="startDate" name="check_in" value="<%=check_in%>" readonly>
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-calendar"></i>&nbsp;
                                    Check-Out:
                                </label>
                                <input type="text" id="endDate" name="check_out" value="<%=check_out%>" readonly>
                            </div>

                            <div class="input_field">
                                <label>
                                    <i class="fa fa-address-card"></i>&nbsp;
                                    Name:
                                </label>
                                <input type="text" id="name" name="name" required>
                                <div class="error" id="nameErr"></div>
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-envelope"></i>&nbsp;
                                    Email:
                                </label>
                                <input type="email" id="email" name="email" required>
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-phone"></i>&nbsp;
                                    Contact Number:
                                </label>
                                <input type="text" id="contact" name="contactNumber" required>
                                <div class="error" id="mobileErr"></div>
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-hotel"></i>&nbsp;
                                    Special Requirement:
                                </label>
                                <input id="requirements" name="specialRequirement">
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-male"></i>&nbsp;
                                    Adult:
                                </label>
                                <input type="text" id="adult" name="adult" required>
                                <div class="error" id="adultErr"></div>
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-child"></i>&nbsp;
                                    Child:
                                </label>
                                <input type="text" id="child" name="child">
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-qrcode"></i>&nbsp;
                                    Transaction ID:
                                </label>
                                <input type="text" id="transactionid" name="transactionID" required>
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-dollar"></i>&nbsp;
                                    Total Amount:
                                </label>
                                <input type="text" id="amount" name="response" required>
                            </div>
                            <div class="input_field">
                                <label>
                                    <i class="fa fa-hotel"></i>&nbsp;
                                    Category:
                                </label>
                                <input type="text" id="name" name="category" value="<%=category%>" required>
                            </div>
                            <div class="input_fields">
                                <label>
                                    <i class="fa fa-bell"></i>&nbsp;
                                    Room Numbers:
                                </label>
                                <% for(const key in pemaRoom){ %>
                                <div class="checkbox_wrapper">
                                    <input type="checkbox" id="room<%= key %>" name="room_number"
                                        value="<%= pemaRoom[key]%>">
                                    <label for="room<%= key %>">
                                        &nbsp;&nbsp;<%= pemaRoom[key]%>
                                    </label>
                                </div>
                                <% } %>
                            </div>

                            <div class="btn2">
                                <button type="submit" value="submit" class="btn btn-primary mb-3">Add</button>
                            </div>
                        </div>
                    </div>
                </form>
            </main>
        </div>

        <script src="/js/home.js"></script>
        
    </center>
</body>

</html>
